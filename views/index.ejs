                    <section>
                        <section>
                            <div class="row flex-wrap">
                              <% tasksList.forEach((task)=> { %>
                                <div class="col-md-4 mb-4">
                                  <div class="card">
                                    <img src=<%= task.file %> class="card-img-top img-fluid" alt="Imagem">
                                    <div class="card-body">
                                      <h5 class="card-title">Nome do aluno: <%= task.tarefa %></h5>
                                      <p class="card-text">CPF: <%= task.cpf %></p>
                                      <p class="card-text">Número de Matrícula: <%= task.matricula %></p>
                                      <p class="card-text">RG: <%= task.rg %></p>
                                      <p class="card-text">Endereço: <%= task.endereco %></p>
                                      <a href="/getById/<%= task._id %>/update" class="btn btn-primary">Editar</a>
                                      <a href="/getById/<%= task._id %>/delete" class="btn btn-danger">Apagar</a>
                                    </div>
                                  </div>
                                </div>
                              <% }) %>
                            </div>
                          </section>
                          
                      </section>
                      
                  </section>
                  
                

               

